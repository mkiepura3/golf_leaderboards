<div class="page-header">
  <h1>
    Group Event Registrations
    <a href="/tournaments/new" class="btn btn-lg btn-success">New Registration</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Golfer</th>
        <th>Group Event</th>
        <th>Actions</th>
      </tr>

      <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.golfer.lastname %>, <%= tournament.golfer.firstname %></td>
        <td><%= tournament.groupevent.eventname %></td>
        <td>
          <a href="/tournaments/<%= tournament.id %>" class="btn btn-primary">Show</a>
          <a href="/tournaments/<%= tournament.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tournament/<%= tournament.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
