<div class="page-header">
  <h1>
    Scores
    <a href="/scores/new" class="btn btn-lg btn-success">New Score</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Golfer</th>
        <th>Course</th>
        <th>Date</th>
        <th>Score</th>
        <th>Actions</th>
      </tr>

      <% @scores.each do |score| %>
      <tr>
        <td><%= score.golfer.lastname %>, <%= score.golfer.firstname %></td>
        <td><%= score.course.coursename %></td>
        <td><%= score.date %></td>
        <td><%= score.hole1 + score.hole2 + score.hole3 + score.hole4 + score.hole5 + score.hole6 + score.hole7 + score.hole8 + score.hole9 + score.hole10 + score.hole11 + score.hole12 + score.hole13 + score.hole14 + score.hole15 + score.hole16 + score.hole17 + score.hole18 %></td>
        <td>
          <a href="/scores/<%= score.id %>" class="btn btn-primary">Show</a>
          <a href="/scores/<%= score.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_score/<%= score.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
